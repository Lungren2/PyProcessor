# /etc/nginx/nginx.conf or in your site configuration

user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 1024;
    # Enable multi-threaded processing
    use epoll;
    multi_accept on;
}

http {
    # Basic optimizations
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    
    # Enable HTTP/2
    listen 443 ssl http2;
    
    # MIME types
    include /etc/nginx/mime.types;
    default_type application/octet-stream;
    
    # SSL optimizations
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # Gzip compression
    gzip on;
    gzip_comp_level 5;
    gzip_min_length 256;
    gzip_proxied any;
    gzip_vary on;
    gzip_types
        application/javascript
        application/vnd.apple.mpegurl
        application/json
        text/css
        text/plain;
    
    # Cache control headers
    map $sent_http_content_type $expires {
        default                    off;
        text/html                  epoch;
        text/css                   max;
        application/javascript     max;
        ~video/                   30m;
        ~audio/                   30m;
        application/vnd.apple.mpegurl 5s;
        video/mp2t                30m;
    }
    
    server {
        listen 80;
        listen [::]:80;
        server_name yourdomain.com;
        
        # Redirect HTTP to HTTPS
        return 301 https://$host$request_uri;
    }
    
    server {
        listen 443 ssl http2;
        server_name yourdomain.com;
        
        ssl_certificate /path/to/cert.pem;
        ssl_certificate_key /path/to/key.pem;
        
        # Root directory
        root /var/www/videos;
        
        # CORS configuration
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Methods' 'GET, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range' always;
        add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range' always;
        
        # Cache control
        expires $expires;
        
        # HLS specific settings
        location ~ \.m3u8$ {
            add_header Cache-Control "public, max-age=5";
            types {
                application/vnd.apple.mpegurl m3u8;
            }
        }
        
        location ~ \.ts$ {
            add_header Cache-Control "public, max-age=1800"; # 30 minutes
            types {
                video/mp2t ts;
            }
        }
        
        # Disable logging for media files
        location ~ \.(m3u8|ts|mp4|m4a|aac|mp3|hls)$ {
            access_log off;
        }
    }
}